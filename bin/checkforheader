#!/bin/sh

[ $# -eq 0 ] && set "$PWD"

for extension in java jsp sql js
  do
  for directory in "$@"
    do
    find "$directory" -name "*.$extension" | while read source
      do
      grep "Copyright (c) Minnesota State Colleges and Universities" $source > /dev/null || echo $source
    done # end for
  done # end for
done # end for

exit 0
